<schemalist>

  <schema id="org.nil.indicator.coinprice" path="/org/nil/coinprice/">
 
    <key type="i" name="refresh">
        <range min="5" max="120"/>
        <default>30</default>
        <summary>Refresh interval</summary>
    </key>
 
    <key type="s" name="exchange">
        <default>'bitstamp'</default>
        <summary>Bitstamp exchange</summary>
    </key>

    <key type="s" name="assetpair-kraken">
        <default>'XXBTZUSD'</default>
        <summary>Kraken asset pairs</summary>
    </key>
    
    <key type="s" name="assetpair-bityep">
        <default>'XXBTZUSD'</default>
        <summary>BitYep asset pairs</summary>
    </key>
    
    <key type="s" name="assetpair-bitstamp">
        <default>'XXBTZUSD'</default>
        <summary>Bitstamp asset pairs</summary>
    </key>
    
    <key type="s" name="assetpair-bittrex">
        <default>'XXBTZUSD'</default>
        <summary>Bittrex asset pairs</summary>
    </key>

     <key type="s" name="assetpair-bitfinex">
        <default>'XXBTZUSD'</default>
        <summary>Bitfinex asset pairs</summary>
    </key>
 
  </schema>
</schemalist>
